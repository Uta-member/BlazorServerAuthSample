@page "/"
@inject AuthenticateProvider _authenticationStateProvider;
@using BlazorServerSample.ToolKit.Auth;

<PageTitle>Index</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.

<SurveyPrompt Title="How is Blazor working for you?" />

<button @onclick=LogoutAsync>ログアウト</button>

@code {
    public async Task LogoutAsync()
    {
        await _authenticationStateProvider.UpdateSignInStatusAsync(null);
    }
}